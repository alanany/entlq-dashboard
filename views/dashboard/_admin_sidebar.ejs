<aside class="w-64 bg-white border-l border-gray-200 hidden md:flex flex-col">
    <div class="h-16 flex items-center justify-center border-b border-gray-200">
        <h1 class="text-2xl font-bold text-indigo-600">أكاديمية انطلق</h1>
    </div>
    
    <nav class="flex-1 px-4 py-6 space-y-2 overflow-y-auto">
        <a href="/" class="flex items-center px-4 py-3 <%= currentPage === 'home' ? 'bg-indigo-50 text-indigo-600 font-bold' : 'text-gray-600 hover:bg-gray-50' %> rounded-lg transition-colors">
            <i data-feather="home" class="ml-3 w-5 h-5"></i>
            <span>الرئيسية</span>
        </a>
        
        <p class="px-4 text-xs font-semibold text-gray-400 mt-4 mb-2">الإدارة</p>
        
        <a href="/courses" class="flex items-center px-4 py-3 <%= currentPage === 'courses' ? 'bg-indigo-50 text-indigo-600 font-bold' : 'text-gray-600 hover:bg-gray-50' %> rounded-lg transition-colors">
            <i data-feather="book-open" class="ml-3 w-5 h-5"></i>
            <span>الدورات التدريبية</span>
        </a>
        
        <a href="/subscriptions" 
            class="flex items-center px-4 py-3 <%= currentPage === 'subscriptions' ? 'bg-indigo-50 text-indigo-600 font-bold' : 'text-gray-600 hover:bg-gray-50' %> rounded-lg transition-colors">
            <i data-feather="list" class="ml-3 w-5 h-5"></i> 
            <span>طلبات الاشتراك</span>
        </a>
        
        <a href="/admin/students" class="flex items-center px-4 py-3 <%= currentPage === 'students' ? 'bg-indigo-50 text-indigo-600 font-bold' : 'text-gray-600 hover:bg-gray-50' %> rounded-lg transition-colors">
            <i data-feather="users" class="ml-3 w-5 h-5"></i>
            <span>الطلاب</span>
        </a>
        
        <a href="/instructors" class="flex items-center px-4 py-3 <%= currentPage === 'instructors' ? 'bg-indigo-50 text-indigo-600 font-bold' : 'text-gray-600 hover:bg-gray-50' %> rounded-lg transition-colors">
            <i data-feather="video" class="ml-3 w-5 h-5"></i>
            <span>المدربين</span>
        </a>
        
        <p class="px-4 text-xs font-semibold text-gray-400 mt-4 mb-2">النظام</p>
        
        <a href="/admin/reports" class="flex items-center px-4 py-3 <%= currentPage === 'reports' ? 'bg-indigo-50 text-indigo-600 font-bold' : 'text-gray-600 hover:bg-gray-50' %> rounded-lg transition-colors">
            <i data-feather="pie-chart" class="ml-3 w-5 h-5"></i>
            <span>التقارير المالية</span>
        </a>
        <a href="/settings" class="flex items-center px-4 py-3 <%= currentPage === 'settings' ? 'bg-indigo-50 text-indigo-600 font-bold' : 'text-gray-600 hover:bg-gray-50' %> rounded-lg transition-colors">
            <i data-feather="settings" class="ml-3 w-5 h-5"></i>
            <span>الإعدادات</span>
        </a>
    </nav>

    <div class="p-4 border-t border-gray-200">
        <div class="flex items-center gap-3 mb-4">
            <img class="h-10 w-10 rounded-full object-cover" src="https://ui-avatars.com/api/?name=Admin+User&background=random" alt="Admin">
            <div>
                <p class="text-sm font-medium text-gray-700"> <%= user.name %> </p>
                <p class="text-xs text-gray-500"><%= user.email %></p>
            </div>
        </div>

        <a href="#" onclick="openLogoutModal(event)" class="flex items-center justify-center p-2 text-red-600 bg-red-50 rounded-lg hover:bg-red-100 transition-colors font-medium">
            <i data-feather="log-out" class="ml-2 w-5 h-5"></i>
            تسجيل الخروج
        </a>
    </div>
</aside>

<div id="logoutModal" class="fixed inset-0 bg-gray-600 bg-opacity-75 hidden items-center justify-center z-50 transition-opacity duration-300">
    <div class="bg-white rounded-lg shadow-xl overflow-hidden max-w-sm w-full mx-4" role="dialog" aria-modal="true" aria-labelledby="modal-title">
        <div class="px-6 pt-5 pb-4">
            <div class="flex items-center">
                <div class="flex-shrink-0 flex items-center justify-center h-12 w-12 rounded-full bg-red-100">
                    <i data-feather="alert-triangle" class="h-6 w-6 text-red-600"></i>
                </div>
                <div class="mr-4 text-right">
                    <h3 class="text-lg leading-6 font-bold text-gray-900" id="modal-title">تأكيد تسجيل الخروج</h3>
                    <div class="mt-2">
                        <p class="text-sm text-gray-500">
                            هل أنت متأكد أنك تريد تسجيل الخروج؟ سيتم إنهاء جلستك الحالية.
                        </p>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="bg-gray-50 px-4 py-3 sm:px-6 flex justify-between gap-3">
            <button type="button" onclick="closeLogoutModal()" class="w-full justify-center rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-base font-medium text-gray-700 hover:bg-gray-100 sm:mt-0 sm:w-auto sm:text-sm transition-colors">
                إلغاء
            </button>
            
            <a id="confirmLogoutButton" href="/logout" class="w-full justify-center rounded-md border border-transparent shadow-sm px-4 py-2 bg-red-600 text-base font-medium text-white hover:bg-red-700 sm:w-auto sm:text-sm transition-colors flex items-center">
                <i data-feather="log-out" class="ml-1 w-4 h-4"></i>
                نعم، تسجيل الخروج
            </a>
        </div>
    </div>
</div>

<script>
    // ----------------- دوال التحكم في Modal الخروج -----------------
    const logoutModal = document.getElementById('logoutModal');

    function openLogoutModal(event) {
        event.preventDefault(); 
        logoutModal.classList.remove('hidden');
        logoutModal.classList.add('flex'); 
        feather.replace(); // لضمان ظهور أيقونة الـ modal عند الفتح
    }

    function closeLogoutModal() {
        logoutModal.classList.remove('flex');
        logoutModal.classList.add('hidden');
    }
</script>