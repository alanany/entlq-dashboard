<script>
    // ... (بقية دوال JavaScript) ...

// ----------------- دوال التحكم في Modal الخروج -----------------

const logoutModal = document.getElementById('logoutModal');

/**
 * فتح نافذة تأكيد تسجيل الخروج
 * @param {Event} event - لمنع السلوك الافتراضي للرابط.
 */
function openLogoutModal(event) {
    event.preventDefault(); // منع التحويل المباشر
    logoutModal.classList.remove('hidden');
    logoutModal.classList.add('flex'); // لجعلها ظاهرة في المنتصف
}

/**
 * إغلاق نافذة تأكيد تسجيل الخروج
 */
function closeLogoutModal() {
    logoutModal.classList.remove('flex');
    logoutModal.classList.add('hidden');
}

// ⭐️ ملاحظة مهمة: عند النقر على الزر الأحمر "نعم، تسجيل الخروج"، 
// سيتم التحويل مباشرة إلى المسار /logout لأن وسم <a> يحتوي عليه.
// ------------------------------------------------------------------
</script>
            </div>
        </aside>

    <!-- Main content -->
    <div class="flex-1 flex flex-col overflow-hidden">

        <!-- Header -->
        <header class="h-16 bg-white border-b border-gray-200 flex items-center px-8">
            <h2 class="text-xl font-bold text-gray-800">إدارة طلبات الاشتراك</h2>
        </header>

        <!-- Main -->
        <main class="flex-1 overflow-x-hidden overflow-y-auto bg-gray-50 p-8">

            <!-- إحصائيات الطلبات -->
            <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
                <% const total = bookings?.length || 0; %>
                <% const pendingCount = bookings.filter(b => b.status==='pending').length; %>
                <% const awaitingCount = bookings.filter(b => b.status==='awaiting_payment').length; %>
                <% const confirmedCount = bookings.filter(b => b.status==='confirmed').length; %>
                <% const rejectedCount = bookings.filter(b => b.status==='rejected').length; %>

                <div class="bg-white p-5 rounded-xl border border-gray-100 flex items-center gap-4 shadow-sm">
                    <div class="p-3 bg-indigo-50 text-indigo-600 rounded-full"><i data-feather="file-text" class="w-6 h-6"></i></div>
                    <div><p class="text-gray-500 text-sm">إجمالي الطلبات</p><p class="text-2xl font-bold"><%= total %></p></div>
                </div>

                <div class="bg-white p-5 rounded-xl border border-gray-100 flex items-center gap-4 shadow-sm">
                    <div class="p-3 bg-yellow-50 text-yellow-600 rounded-full"><i data-feather="clock" class="w-6 h-6"></i></div>
                    <div><p class="text-gray-500 text-sm">قيد المراجعة</p><p class="text-2xl font-bold"><%= pendingCount %></p></div>
                </div>

                <div class="bg-white p-5 rounded-xl border border-gray-100 flex items-center gap-4 shadow-sm">
                    <div class="p-3 bg-orange-50 text-orange-600 rounded-full"><i data-feather="alert-triangle" class="w-6 h-6"></i></div>
                    <div><p class="text-gray-500 text-sm">بانتظار الدفع</p><p class="text-2xl font-bold"><%= awaitingCount %></p></div>
                </div>

                <div class="bg-white p-5 rounded-xl border border-gray-100 flex items-center gap-4 shadow-sm">
                    <div class="p-3 bg-green-50 text-green-600 rounded-full"><i data-feather="check-circle" class="w-6 h-6"></i></div>
                    <div><p class="text-gray-500 text-sm">تم الموافقة</p><p class="text-2xl font-bold"><%= confirmedCount %></p></div>
                </div>
            </div>

            <!-- جدول الطلبات -->
            <div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden">

                <!-- فلترة وبحث -->
                <div class="p-4 border-b border-gray-100 flex justify-between items-center flex-wrap gap-4">
                    <div class="flex items-center gap-4">
                        <div class="relative">
                            <i data-feather="search" class="absolute top-2.5 right-3 w-4 h-4 text-gray-400"></i>
                            <input type="text" placeholder="بحث بالاسم أو الدورة..." class="w-64 pr-10 pl-4 py-2 border border-gray-300 rounded-lg text-sm focus:ring-2 focus:ring-indigo-500 focus:outline-none" id="searchInput">
                        </div>
                        <select id="statusFilter" class="border border-gray-300 rounded-lg px-4 py-2 text-sm focus:outline-none">
                            <option value="all">الحالة: الكل</option>
                            <option value="pending">قيد المراجعة</option>
                            <option value="awaiting_payment">بانتظار الدفع</option>
                            <option value="confirmed">تم الموافقة</option>
                            <option value="rejected">مرفوض</option>
                        </select>
                    </div>
                </div>

                <div class="overflow-x-auto">
                    <table class="w-full text-right" id="bookingsTable">
                        <thead class="bg-gray-50 text-gray-500 text-xs uppercase font-medium">
                            <tr>
                                <th class="px-6 py-3">الطالب</th>
                                <th class="px-6 py-3">الدورة</th>
                                <th class="px-6 py-3">تاريخ الطلب</th>
                                <th class="px-6 py-3">حالة الدفع</th>
                                <th class="px-6 py-3">إدارة الجلسات</th>
                                <th class="px-6 py-3">الإجراءات</th>
                            </tr>
                        </thead>
                        <tbody class="divide-y divide-gray-100 text-sm text-gray-700" id="bookingsTableBody"></tbody>
                    </table>
                </div>
            </div>

        </main>
    </div>
</div>

<script>
    feather.replace();
    const allBookings = <%- JSON.stringify(bookings || []) %>;

    function getStatusInfo(status) {
        return {
            pending: { text: 'قيد المراجعة', color: 'bg-yellow-100 text-yellow-800' },
            awaiting_payment: { text: 'بانتظار الدفع', color: 'bg-orange-100 text-orange-800' },
            confirmed: { text: 'تم الموافقة', color: 'bg-green-100 text-green-800' },
            rejected: { text: 'مرفوض', color: 'bg-red-100 text-red-800' }
        }[status] || { text: 'غير معروف', color: 'bg-gray-200 text-gray-700' };
    }

    function buildRow(b) {
        const student = b.studentId?.name || 'طالب غير معروف';
        const course = b.courseId?.title || 'كورس غير معروف';
        const orderDate = b.createdAt ? new Date(b.createdAt).toLocaleDateString('ar-EG') : 'غير متوفر';
        const info = getStatusInfo(b.status);
          const schedule = (b.status !== 'rejected') ?

        `

      <a href="/booking/${b._id}/schedule"

                    class="bg-blue-100 text-blue-800 px-3 py-1 rounded-full text-xs font-bold block text-center">

                    جدولة الحصص

                </a>

        ` : '';

        const addLinks = (b.status !== 'rejected') ?

 `

  <a href="/booking/${b._id}/manage-sessions"

                    class="text-purple-600 bg-purple-100 px-3 py-1 rounded-full text-xs font-bold block text-center hover:bg-purple-200 transition">

                    إدارة/إضافة الحصص

                </a>

                 `

  : '';

     const managePaymentButton = (b.status !== 'rejected') ?

        `

        <a href="/booking/${b._id}/manage-payment"

            class="bg-green-600 text-white px-4 py-2 rounded-lg text-sm font-bold block text-center mt-2">

            إدارة الدفع

        </a>

        `

        : ''; // إذا كانت rejected، فسنعرض سلسلة نصية فارغة (زر مخفي)


        const paymentBtn = (b.status !== 'rejected') ? `<button  onclick="location.href='/payments?bookingId=${b._id}'" class="px-3 py-1 bg-green-600 text-white rounded-lg text-xs hover:bg-green-700">إدارة الدفع</button>` : '';
        const sessionBtn = (b.status === 'confirmed') ? `<button onclick="location.href='/sessions?bookingId=${b._id}'" class="px-3 py-1 bg-indigo-600 text-white rounded-lg text-xs hover:bg-indigo-700">إدارة الجلسات</button>` : '';
        return `
            <tr class="hover:bg-gray-50 transition-colors">
                <td class="px-6 py-4 font-medium">${student}</td>
                <td class="px-6 py-4">${course}</td>
                <td class="px-6 py-4 text-gray-500">${orderDate}</td>
                <td class="px-6 py-4"><span class="${info.color} px-2 py-1 rounded-full text-xs font-medium">${info.text}</span></td>
                <td class="px-6 py-4">${managePaymentButton}</td>
                <td class="px-6 py-4 flex gap-2">
                    ${schedule}
                    ${addLinks}
                </td>
            </tr>`;
    }

    function renderTable() {
        const searchValue = document.getElementById('searchInput').value.toLowerCase();
        const statusFilter = document.getElementById('statusFilter').value;

        const filtered = allBookings.filter(b => {
            const matchSearch = b.studentId?.name.toLowerCase().includes(searchValue) || b.courseId?.title.toLowerCase().includes(searchValue);
            const matchStatus = statusFilter === 'all' || b.status === statusFilter;
            return matchSearch && matchStatus;
        });

        document.getElementById('bookingsTableBody').innerHTML = filtered.map(buildRow).join('');
        feather.replace();
    }

    document.getElementById('searchInput').addEventListener('input', renderTable);
    document.getElementById('statusFilter').addEventListener('change', renderTable);

    document.addEventListener('DOMContentLoaded', renderTable);
</script>

</body>
