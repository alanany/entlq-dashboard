<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>جدول المواعيد - لوحة المعلم</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Tajawal:wght@400;500;700;800&display=swap" rel="stylesheet">
    <script src="https://unpkg.com/feather-icons"></script>
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.10/index.global.min.js"></script>
    
    <style>
        body { font-family: 'Tajawal', sans-serif; background-color: #f8fafc; }
        .tab-btn.active { background-color: #4f46e5; color: white; border-color: #4f46e5; }
        .fc-event { cursor: pointer; padding: 2px 5px; border-radius: 6px; font-size: 0.75rem; }
        .fc-toolbar-title { font-size: 1.2rem !important; font-weight: 800; }
    </style>
</head>
<body class="overflow-hidden">

    <div class="flex h-screen overflow-hidden">


        <div class="flex-1 flex flex-col min-w-0 overflow-hidden">
                <header class="sticky top-0 z-50 bg-white/80 backdrop-blur-md border-b border-gray-100 shadow-sm">
        <div class="max-w-5xl mx-auto px-4 h-16 flex items-center justify-between">
            <div class="flex items-center gap-4">
                <button onclick="history.back()" class="p-2 hover:bg-gray-100 rounded-full transition">
                    <i data-feather="arrow-right" class="w-5 h-5 text-gray-600"></i>
                </button>
                <h1 class="text-lg font-bold text-gray-900">جدول الحصص </h1>
            </div>
            <div class="bg-indigo-50 text-indigo-600 p-2 rounded-xl">
                <i data-feather="credit-card" class="w-5 h-5"></i>
            </div>
        </div>
    </header>

            <main class="flex-1 overflow-y-auto p-4 md:p-8">
                <div class="max-w-6xl mx-auto">
                    
                    <div class="flex flex-col md:flex-row items-center justify-between mb-8 gap-4">
                        <div class="flex bg-white p-1 rounded-2xl border border-gray-100 shadow-sm">
                            <button onclick="switchView('weekly')" id="btn-weekly" class="tab-btn active px-6 py-2 rounded-xl text-sm font-bold transition">أسبوعي</button>
                            <button onclick="switchView('monthly')" id="btn-monthly" class="tab-btn px-6 py-2 rounded-xl text-sm font-bold transition text-gray-500">شهري</button>
                        </div>
                        <div class="flex items-center gap-4">
                            <button onclick="navigateCalendar('prev')" class="p-2 hover:bg-gray-200 rounded-full transition"><i data-feather="chevron-right"></i></button>
                            <h3 id="currentDateLabel" class="text-lg font-extrabold text-gray-800">الجدول الدراسي</h3>
                            <button onclick="navigateCalendar('next')" class="p-2 hover:bg-gray-200 rounded-full transition"><i data-feather="chevron-left"></i></button>
                        </div>
                    </div>

                    <div id="weeklyView" class="space-y-4">
                        <% if (Object.keys(schedule).length > 0) { %>
                            <% Object.keys(schedule).forEach(date => { %>
                                <div class="bg-white rounded-3xl border border-gray-100 p-4 flex flex-col md:flex-row gap-4 items-start md:items-center">
                                    <div class="w-24 text-center border-l-2 border-indigo-500 ml-4">
                                        <p class="text-xs text-gray-400 font-bold"><%= schedule[date].dayName %></p>
                                        <p class="text-2xl font-black text-gray-900"><%= schedule[date].dayNumber %></p>
                                    </div>
                                    <div class="flex-1 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-3 w-full">
                                        <% schedule[date].sessions.forEach(session => { %>
                                            <div class="p-3 rounded-2xl border <%= session.status === 'completed' ? 'bg-emerald-50 border-emerald-100' : 'bg-indigo-50 border-indigo-100' %> relative">
                                                <p class="text-[10px] font-bold <%= session.status === 'completed' ? 'text-emerald-500' : 'text-indigo-500' %>"><%= session.time %></p>
                                                <p class="text-sm font-bold text-gray-800"><%= session.courseTitle %></p>
                                                <p class="text-[10px] text-gray-500 italic">الطالب: <%= session.studentName %></p>
                                            </div>
                                        <% }) %>
                                    </div>
                                </div>
                            <% }) %>
                        <% } else { %>
                            <div class="text-center py-20 bg-white rounded-3xl border-2 border-dashed border-gray-100">
                                <p class="text-gray-400 font-bold">لا توجد حصص مجدولة حالياً</p>
                            </div>
                        <% } %>
                    </div>

                    <div id="monthlyView" class="hidden bg-white rounded-3xl border border-gray-100 p-6 shadow-sm">
                        <div id="calendar-monthly"></div>
                    </div>

                </div>
            </main>
        </div>
    </div>

    <script>
        feather.replace();
        let calendar;

        function switchView(view) {
            const weekly = document.getElementById('weeklyView');
            const monthly = document.getElementById('monthlyView');
            const btnW = document.getElementById('btn-weekly');
            const btnM = document.getElementById('btn-monthly');

            if (view === 'weekly') {
                weekly.classList.remove('hidden');
                monthly.classList.add('hidden');
                btnW.classList.add('active');
                btnM.classList.remove('active');
                document.getElementById('currentDateLabel').innerText = "الجدول الدراسي";
            } else {
                weekly.classList.add('hidden');
                monthly.classList.remove('hidden');
                btnM.classList.add('active');
                btnW.classList.remove('active');
                if (!calendar) initMonthlyCalendar();
                else { calendar.render(); updateDateLabel(); }
            }
        }

        function initMonthlyCalendar() {
            const calendarEl = document.getElementById('calendar-monthly');
            calendar = new FullCalendar.Calendar(calendarEl, {
                initialView: 'dayGridMonth',
                locale: 'ar',
                direction: 'rtl',
                headerToolbar: false,
                events: '/teacher/events/<%= user._id %>',
                height: 'auto',
                
                datesSet: updateDateLabel
            });
            calendar.render();
        }

        function navigateCalendar(dir) {
            if (calendar && !document.getElementById('monthlyView').classList.contains('hidden')) {
                dir === 'next' ? calendar.next() : calendar.prev();
            }
        }

        function updateDateLabel() {
            if (calendar) document.getElementById('currentDateLabel').innerText = calendar.view.title;
        }
    </script>
</body>
</html>