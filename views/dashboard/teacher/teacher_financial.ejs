<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>المحفظة المالية - <%= teacherName %></title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Tajawal:wght@400;500;700;800&display=swap" rel="stylesheet">
    <script src="https://unpkg.com/feather-icons"></script>
    <style>
        body { font-family: 'Tajawal', sans-serif; background-color: #f4f7fe; color: #1e293b; }
        .wallet-gradient { background: linear-gradient(135deg, #312e81 0%, #4f46e5 100%); }
        .glass-effect { background: rgba(255, 255, 255, 0.9); backdrop-filter: blur(10px); }
        .card-shadow { box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.05); }
        .month-stat-card { transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1); }
        .month-stat-card:hover { transform: translateY(-5px); }
    </style>
</head>
<body class="pb-20">

    <header class="sticky top-0 z-50 glass-effect border-b border-gray-100 shadow-sm">
        <div class="max-w-6xl mx-auto px-6 h-20 flex items-center justify-between">
            <div class="flex items-center gap-4">
                <button onclick="history.back()" class="p-2.5 bg-gray-50 text-gray-500 hover:bg-indigo-50 hover:text-indigo-600 rounded-xl transition-all">
                    <i data-feather="arrow-right" class="w-5 h-5"></i>
                </button>
                <div>
                    <h1 class="text-xl font-extrabold text-gray-900 tracking-tight">المحفظة المالية</h1>
                    <p class="text-[10px] text-gray-400 font-bold uppercase tracking-widest leading-none mt-1">أهلاً بك، <%= teacherName %></p>
                </div>
            </div>
            <div class="flex items-center gap-3">
                <div class="hidden md:block text-left">
                    <p class="text-[9px] font-black text-gray-400 uppercase leading-none">سعر ساعتك الحالي</p>
                    <p class="text-sm font-black text-indigo-600 leading-none mt-1"><%= hourlyRate %> ر.س</p>
                </div>
                <div class="w-10 h-10 bg-indigo-600 rounded-xl flex items-center justify-center text-white shadow-lg shadow-indigo-200">
                    <i data-feather="dollar-sign" class="w-5 h-5"></i>
                </div>
            </div>
        </div>
    </header>

    <main class="max-w-6xl mx-auto px-6 py-10">
        
        <div class="wallet-gradient p-10 rounded-[3rem] text-white mb-12 relative overflow-hidden card-shadow">
            <div class="relative z-10 flex flex-col md:flex-row justify-between items-center gap-8">
                <div class="text-center md:text-right">
                    <p class="text-indigo-100 text-sm font-medium mb-3 opacity-80 flex items-center gap-2 justify-center md:justify-start">
                        <i data-feather="pie-chart" class="w-4 h-4"></i>
                        إجمالي الأرباح المتاحة
                    </p>
                    <div class="flex items-baseline gap-3">
                        <span class="text-6xl font-black tracking-tighter italic"><%= totalEarnings %></span>
                        <span class="text-xl font-bold text-indigo-200">ر.س</span>
                    </div>
                </div>
                <div class="flex flex-col gap-3 w-full md:w-auto">
                    <button class="bg-white text-indigo-900 px-12 py-4 rounded-[1.5rem] font-black text-sm shadow-xl hover:bg-indigo-50 transition-all active:scale-95 flex items-center justify-center gap-2">
                        <i data-feather="external-link" class="w-4 h-4"></i>
                        طلب سحب كلي
                    </button>
                    <p class="text-[10px] text-center text-indigo-100 font-medium opacity-60 italic">يتم التحويل خلال 24-48 ساعة عمل</p>
                </div>
            </div>
            <div class="absolute -top-24 -right-24 w-64 h-64 bg-white/10 rounded-full blur-3xl"></div>
            <div class="absolute -bottom-24 -left-24 w-80 h-80 bg-indigo-400/20 rounded-full blur-3xl"></div>
        </div>

        <div class="mb-12">
            <div class="flex justify-between items-end mb-8">
                <div>
                    <h2 class="text-2xl font-black text-gray-900 italic">أرباح الشهور</h2>
                    <p class="text-xs text-gray-400 font-bold mt-1">اضغط على الشهر لعرض التفاصيل في الجدول</p>
                </div>
                <div class="hidden md:flex gap-2">
                    <div class="w-3 h-3 rounded-full bg-indigo-500"></div>
                    <div class="w-3 h-3 rounded-full bg-indigo-200"></div>
                </div>
            </div>

            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
                <% Object.keys(monthlyStats).forEach(monthKey => { %>
                    <div class="month-stat-card group bg-white p-8 rounded-[2.5rem] border border-gray-50 card-shadow cursor-pointer relative overflow-hidden" 
                         data-month="<%= monthKey %>" onclick="filterByMonth('<%= monthKey %>')">
                        
                        <div class="relative z-10">
                            <div class="flex justify-between items-start mb-6">
                                <div class="w-14 h-14 bg-indigo-50 text-indigo-600 rounded-2xl flex items-center justify-center font-black text-lg group-hover:bg-indigo-600 group-hover:text-white transition-colors duration-300">
                                    <%= monthKey %>
                                </div>
                                <div class="text-left">
                                    <span class="text-[10px] font-black text-gray-400 bg-gray-50 px-3 py-1.5 rounded-full uppercase tracking-tighter">
                                        <%= monthlyStats[monthKey].count %> حصص
                                    </span>
                                </div>
                            </div>
                            
                            <h4 class="font-black text-xl text-gray-900 mb-2 italic"><%= monthlyStats[monthKey].name %></h4>
                            <div class="flex items-baseline gap-1 mb-6">
                                <span class="text-2xl font-black text-indigo-600 tracking-tighter"><%= monthlyStats[monthKey].total.toFixed(2) %></span>
                                <span class="text-xs font-bold text-gray-400 uppercase">ر.س</span>
                            </div>

                            <button onclick="event.stopPropagation(); requestWithdraw('<%= monthlyStats[monthKey].name %>', '<%= monthlyStats[monthKey].total %>')" 
                                    class="w-full py-4 bg-gray-900 text-white text-[11px] font-black rounded-2xl hover:bg-indigo-600 transition-all shadow-lg shadow-gray-100 flex items-center justify-center gap-2">
                                <i data-feather="download" class="w-3 h-3"></i>
                                سحب أرباح الشهر
                            </button>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>

        <div class="bg-white rounded-[3rem] border border-gray-50 card-shadow overflow-hidden">
            <div class="p-8 border-b border-gray-50 flex flex-col md:flex-row justify-between items-center gap-6">
                <div class="text-center md:text-right">
                    <h3 class="font-black text-xl text-gray-900 italic">التفاصيل المالية</h3>
                    <p id="filterIndicator" class="text-[10px] text-gray-400 font-bold uppercase tracking-widest mt-1">جميع العمليات المسجلة</p>
                </div>
                
                <div class="flex items-center gap-3 bg-gray-50 p-2 rounded-[1.5rem] border border-gray-100 w-full md:w-auto">
                    <i data-feather="filter" class="w-4 h-4 text-indigo-500 mr-2"></i>
                    <select id="monthSelect" class="bg-transparent text-xs font-black text-gray-700 outline-none border-none cursor-pointer min-w-[140px]">
                        <option value="all">كافة الشهور</option>
                        <% Object.keys(monthlyStats).forEach(monthKey => { %>
                            <option value="<%= monthKey %>"><%= monthlyStats[monthKey].name %></option>
                        <% }) %>
                    </select>
                </div>
            </div>

            <div class="overflow-x-auto">
                <table class="w-full text-right">
                    <thead>
                        <tr class="bg-gray-50/50 text-[10px] font-black text-gray-400 tracking-[0.2em] uppercase">
                            <th class="px-8 py-5">المادة والطالب</th>
                            <th class="px-8 py-5 text-center">المدة</th>
                            <th class="px-8 py-5">تاريخ الحصة</th>
                            <th class="px-8 py-5 text-left">الربح الصافي</th>
                        </tr>
                    </thead>
                    <tbody id="sessionsTable" class="divide-y divide-gray-50">
                        <% completedSessions.forEach(session => { %>
                            <tr class="session-row group transition-all hover:bg-indigo-50/30" data-month="<%= session.month %>">
                                <td class="px-8 py-6">
                                    <p class="text-sm font-bold text-gray-800 group-hover:text-indigo-700 transition-colors"><%= session.courseTitle %></p>
                                    <div class="flex items-center gap-1.5 mt-1">
                                        <div class="w-1.5 h-1.5 rounded-full bg-green-500"></div>
                                        <p class="text-[10px] text-gray-400 font-bold">الطالب: <%= session.studentName %></p>
                                    </div>
                                </td>
                                <td class="px-8 py-6 text-center">
                                    <span class="inline-flex items-center px-3 py-1.5 rounded-xl bg-gray-50 text-gray-600 text-[10px] font-black italic border border-gray-100">
                                        <i data-feather="clock" class="w-3 h-3 mr-1 opacity-50"></i>
                                        <%= session.duration %> دقيقة
                                    </span>
                                </td>
                                <td class="px-8 py-6">
                                    <p class="text-xs font-bold text-gray-600">
                                        <%= new Date(session.date).toLocaleDateString('ar-EG', {day: 'numeric', month: 'long'}) %>
                                    </p>
                                    <p class="text-[9px] text-gray-400 font-medium mt-0.5 italic opacity-70"><%= session.time %></p>
                                </td>
                                <td class="px-8 py-6 text-left">
                                    <div class="inline-flex flex-col items-end">
                                        <span class="text-sm font-black text-green-600 tracking-tighter">+<%= session.price.toFixed(2) %></span>
                                        <span class="text-[8px] font-bold text-gray-300 uppercase">محقق</span>
                                    </div>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </main>

    <script>
        // تفعيل الأيقونات
        feather.replace();

        // دالة الفلترة من البطاقات
        function filterByMonth(month) {
            document.getElementById('monthSelect').value = month;
            updateUI(month);
            // التمرير للجدول بسلاسة
            document.getElementById('sessionsTable').scrollIntoView({ behavior: 'smooth', block: 'center' });
        }

        // دالة الفلترة من القائمة المنسدلة
        document.getElementById('monthSelect').addEventListener('change', function(e) {
            updateUI(e.target.value);
        });

        function updateUI(val) {
            const rows = document.querySelectorAll('.session-row');
            const indicator = document.getElementById('filterIndicator');
            const cards = document.querySelectorAll('.month-stat-card');

            // تحديث صفوف الجدول
            rows.forEach(row => {
                row.style.display = (val === 'all' || row.dataset.month === val) ? 'table-row' : 'none';
            });

            // تحديث ستايل البطاقات المحددة
            cards.forEach(card => {
                if(card.dataset.month === val) {
                    card.classList.add('ring-4', 'ring-indigo-100', 'border-indigo-500', 'bg-indigo-50/10');
                } else {
                    card.classList.remove('ring-4', 'ring-indigo-100', 'border-indigo-500', 'bg-indigo-50/10');
                }
            });

            // تحديث النص التوضيحي
            indicator.innerText = val === 'all' ? 'جميع العمليات المسجلة' : 'عرض نتائج عمليات شهر ' + val;
        }

        // دالة طلب السحب
        function requestWithdraw(monthName, amount) {
            // يمكن استبدالها بـ SweetAlert2 لتصميم أجمل
            const confirmWithdraw = confirm(`تأكيد طلب سحب أرباح شهر ${monthName}؟\nالمبلغ: ${amount} ر.س`);
            if(confirmWithdraw) {
                alert('تم إرسال طلبك بنجاح. سيتم إخطارك عند اكتمال التحويل.');
            }
        }
    </script>
</body>
</html>