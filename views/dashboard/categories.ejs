<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>إدارة أقسام الدورات</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Tajawal:wght@400;500;700&display=swap" rel="stylesheet">
    <script src="https://unpkg.com/feather-icons"></script>
    <style>
        body { font-family: 'Tajawal', sans-serif; }
        .spinner {
            border: 4px solid rgba(255, 255, 255, 0.3);
            border-top: 4px solid #fff;
            border-radius: 50%;
            width: 1.25rem;
            height: 1.25rem;
            animation: spin 1s linear infinite;
        }
        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }
        .modal-active { opacity: 1; pointer-events: auto; }
        .modal-inactive { opacity: 0; pointer-events: none; }
    </style>
</head>
<body class="bg-gray-50 text-gray-800">
    
    <div class="flex flex-col min-h-screen"> 

        <header class="h-16 bg-white border-b border-gray-200 flex items-center justify-between px-8 shadow-sm">
            <h2 class="text-xl font-bold text-gray-800">إدارة أقسام الدورات</h2>
            <nav class="flex items-center gap-4">
                 <a href="/" class="text-sm text-gray-600 hover:text-indigo-600 flex items-center">
                    <i data-feather="grid" class="w-4 h-4 ml-2"></i> لوحة التحكم
                 </a>
            </nav>
        </header>

        <main class="flex-1 overflow-x-hidden overflow-y-auto bg-gray-50 p-8">
            <div class="max-w-4xl mx-auto"> 

                <div class="bg-white p-6 rounded-xl shadow-lg border border-gray-100 mb-8">
                    <h3 class="font-bold text-lg mb-4 text-gray-800 border-b pb-2">إضافة قسم جديد</h3>
                    <form id="addCategoryForm" onsubmit="handleAddCategory(event)" class="flex flex-col sm:flex-row gap-4 items-end">
                        <div class="flex-1 w-full">
                            <label for="categoryName" class="block text-sm font-medium text-gray-700 mb-1">اسم القسم</label>
                            <input type="text" id="categoryName" name="name" required class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-indigo-500 focus:outline-none" placeholder="مثال: تطوير الويب">
                        </div>
                        <div class="w-full sm:w-auto">
                            <button id="addBtn" type="submit" class="w-full px-5 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition-colors flex items-center justify-center font-medium">
                                إضافة
                                <div id="addSpinner" class="spinner mr-2 hidden"></div>
                            </button>
                        </div>
                    </form>
                </div>

                <div class="bg-white p-6 rounded-xl shadow-lg border border-gray-100">
                    <h3 class="font-bold text-lg mb-4 text-gray-800 border-b pb-2">الأقسام الحالية</h3>
                    <div class="overflow-x-auto">
                        <table class="min-w-full divide-y divide-gray-200">
                            <thead class="bg-gray-50">
                                <tr>
                                    <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">الاسم</th>
                                    <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">عدد الدورات</th>
                                    <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">إجراءات</th>
                                </tr>
                            </thead>
                            <tbody id="categoriesTableBody" class="bg-white divide-y divide-gray-200">
                                <% if (categories && categories.length > 0) { %>
                                    <% categories.forEach(category => { %>
                                    <tr id="category-<%= category._id %>">
                                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900"><%= category.name %></td>
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= category.courseCount || 0 %></td>
                                        <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                            <button onclick="showDeleteModal('<%= category._id %>', '<%= category.name %>')" class="text-red-600 hover:text-red-900 p-2 rounded hover:bg-red-50 transition-colors"><i data-feather="trash-2" class="w-4 h-4"></i></button>
                                        </td>
                                    </tr>
                                    <% }); %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="3" class="px-6 py-4 text-center text-sm text-gray-500">لا توجد أقسام مضافة بعد.</td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
        </main>
    </div>
    
    <div id="deleteModal" class="fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center modal-inactive transition-opacity duration-300">
        <div class="bg-white rounded-xl shadow-2xl w-full max-w-sm mx-4 p-6 transform translate-y-0 transition-transform duration-300">
            <div class="flex flex-col items-center">
                <i data-feather="alert-triangle" class="w-12 h-12 text-red-500 mb-4"></i>
                <h3 class="text-xl font-bold text-gray-800 mb-2">تأكيد الحذف</h3>
                <p class="text-gray-600 text-center mb-6 text-sm">هل أنت متأكد من حذف القسم <strong id="categoryTitleToDelete" class="text-red-600">""</strong>؟ هذا الإجراء لا يمكن التراجع عنه.</p>
                
                <input type="hidden" id="categoryIdToDelete">

                <div class="flex gap-3 w-full">
                    <button onclick="closeModal()" class="flex-1 px-4 py-2 border border-gray-300 rounded-lg text-gray-600 hover:bg-gray-100 transition-colors font-medium">إلغاء</button>
                    <button onclick="confirmDeletion()" id="confirmDeleteBtn" class="flex-1 px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 transition-colors font-medium flex items-center justify-center">
                        تأكيد الحذف
                    </button>
                </div>
            </div>
        </div>
    </div>
    
    <div id="toastContainer" class="fixed bottom-4 right-4 z-[70] space-y-3"></div>

    <script>
        feather.replace();

        const addBtn = document.getElementById('addBtn');
        const addSpinner = document.getElementById('addSpinner');
        const confirmDeleteBtn = document.getElementById('confirmDeleteBtn');
        const deleteModal = document.getElementById('deleteModal');
        const categoryIdInput = document.getElementById('categoryIdToDelete');
        const categoryTitleDisplay = document.getElementById('categoryTitleToDelete');

        const originalAddButtonText = 'إضافة';
        const originalDeleteButtonText = 'تأكيد الحذف';

        // ------------------- الدوال المساعدة (Toast/Loading) -------------------

        function showToast(message, type = 'info', duration = 4000) {
            const toastContainer = document.getElementById('toastContainer');
            let bgColor, icon;
            switch (type) {
                case 'success':
                    bgColor = 'bg-green-600';
                    icon = 'check-circle';
                    break;
                case 'error':
                    bgColor = 'bg-red-600';
                    icon = 'x-octagon';
                    break;
                default:
                    bgColor = 'bg-blue-500';
                    icon = 'info';
                    break;
            }

            const toast = document.createElement('div');
            toast.className = `p-4 rounded-lg shadow-xl text-white ${bgColor} flex items-center transition-all duration-300 transform translate-x-0 opacity-100 max-w-sm w-full`;
            
            toast.innerHTML = `<i data-feather="${icon}" class="w-5 h-5 ml-3 flex-shrink-0"></i><span class="text-sm font-medium">${message}</span>`;
            toastContainer.appendChild(toast);
            feather.replace();

            setTimeout(() => {
                toast.style.opacity = '1';
                toast.style.transform = 'translateX(0)';
            }, 50);

            setTimeout(() => {
                toast.style.opacity = '0';
                toast.style.transform = 'translateX(100%)';
                toast.addEventListener('transitionend', () => { toast.remove(); });
            }, duration);
        }

        function startLoading(btn, spinner, text) {
            btn.disabled = true;
            spinner.classList.remove('hidden');
            btn.innerHTML = `جاري... ${spinner.outerHTML}`;
        }

        function stopLoading(btn, spinner, text) {
            btn.disabled = false;
            spinner.classList.add('hidden');
            btn.innerHTML = text;
        }

        // ------------------- منطق الـ Modal (الحذف) -------------------

        function showDeleteModal(id, title) {
            categoryIdInput.value = id;
            categoryTitleDisplay.textContent = title;
            
            deleteModal.classList.remove('modal-inactive');
            deleteModal.classList.add('modal-active');
        }

        function closeModal() {
            deleteModal.classList.remove('modal-active');
            deleteModal.classList.add('modal-inactive');
            stopLoading(confirmDeleteBtn, confirmDeleteBtn.querySelector('.spinner') || document.createElement('div'), originalDeleteButtonText);
            feather.replace();
        }

        // ------------------- منطق إضافة قسم -------------------
        async function handleAddCategory(event) {
            event.preventDefault();
            const form = event.target;
            const categoryName = form.name.value.trim();
            if (!categoryName) return;

            startLoading(addBtn, addSpinner, originalAddButtonText);

            try {
                const response = await fetch('/create-category', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ name: categoryName })
                });

                const data = await response.json();

                if (!response.ok) {
                    throw new Error(data.message || 'فشل في إضافة القسم.');
                }

                appendNewCategoryRow(data.category);
                showToast(`تم إضافة القسم "${data.category.name}" بنجاح.`, 'success');
                form.reset();

            } catch (error) {
                console.error("خطأ الإضافة:", error);
                showToast(error.message || 'حدث خطأ أثناء إضافة القسم.', 'error');
            } finally {
                stopLoading(addBtn, addSpinner, originalAddButtonText);
                feather.replace();
            }
        }
        
        function appendNewCategoryRow(category) {
            const tbody = document.getElementById('categoriesTableBody');
            
            // إزالة رسالة "لا توجد أقسام" إذا كانت موجودة
            const emptyRow = tbody.querySelector('td[colspan="3"]');
            if (emptyRow) {
                emptyRow.closest('tr').remove();
            }
            
            const newRowHtml = `
                <tr id="category-${category._id}">
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">${category.name}</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">0</td>
                    <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                        <button onclick="showDeleteModal('${category._id}', '${category.name}')" class="text-red-600 hover:text-red-900 p-2 rounded hover:bg-red-50 transition-colors"><i data-feather="trash-2" class="w-4 h-4"></i></button>
                    </td>
                </tr>
            `;
            tbody.insertAdjacentHTML('beforeend', newRowHtml);
            feather.replace();
        }

        // ------------------- منطق حذف قسم -------------------
        async function confirmDeletion() {
            const categoryId = categoryIdInput.value;
            
            // إضافة سبينر لزر الحذف داخل الـ Modal
            let deleteSpinnerElement = confirmDeleteBtn.querySelector('.spinner');
            if (!deleteSpinnerElement) {
                deleteSpinnerElement = document.createElement('div');
                deleteSpinnerElement.className = 'spinner mr-2';
                confirmDeleteBtn.prepend(deleteSpinnerElement);
            }
            startLoading(confirmDeleteBtn, deleteSpinnerElement, originalDeleteButtonText);


            try {
                const response = await fetch(`/category/${categoryId}`, {
                    method: 'DELETE',
                    headers: { 'Content-Type': 'application/json' }
                });

                const data = await response.json();

                if (!response.ok) {
                    throw new Error(data.message || 'فشل في حذف القسم.');
                }

                closeModal();
                showToast(data.message || 'تم حذف القسم بنجاح.', 'success');
                
                // حذف الصف من الجدول ديناميكياً
                const rowToRemove = document.getElementById(`category-${categoryId}`);
                if (rowToRemove) {
                    rowToRemove.remove();
                    // إذا أصبح الجدول فارغاً، أضف رسالة "لا توجد أقسام"
                    if (document.getElementById('categoriesTableBody').children.length === 0) {
                        document.getElementById('categoriesTableBody').innerHTML = '<tr><td colspan="3" class="px-6 py-4 text-center text-sm text-gray-500">لا توجد أقسام مضافة بعد.</td></tr>';
                    }
                }

            } catch (error) {
                console.error("خطأ الحذف:", error);
                showToast(error.message || 'حدث خطأ غير متوقع أثناء الحذف.', 'error');
            } finally {
                stopLoading(confirmDeleteBtn, deleteSpinnerElement, originalDeleteButtonText);
                deleteSpinnerElement.remove(); // إزالة السبينر بعد الانتهاء
                feather.replace();
            }
        }
    </script>
</body>
</html>