<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>تسجيل الدخول</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Tajawal:wght@400;500;700&display=swap" rel="stylesheet">
    <script src="https://unpkg.com/feather-icons"></script>
    <style>body { font-family: 'Tajawal', sans-serif; }</style>
</head>
<body class="bg-indigo-50 min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8 relative">
    
    <a href="/" class="absolute top-6 right-6 flex items-center text-sm font-medium text-gray-700 hover:text-indigo-600 transition duration-150 p-2 rounded-lg bg-white shadow-md border border-gray-100">
        <i data-feather="arrow-right" class="mr-2 w-4 h-4"></i>
        العودة إلى الرئيسية
    </a>

    <div class="max-w-md w-full space-y-8 p-10 bg-white rounded-xl shadow-2xl border border-gray-100">
        
        <div class="text-center">
            <h1 class="text-3xl font-extrabold text-indigo-700 flex items-center justify-center">
                <i data-feather="key" class="ml-3 w-8 h-8"></i> تسجيل الدخول
            </h1>
            <p class="mt-2 text-sm text-gray-600">أهلاً بك مجدداً، سجل دخولك للمتابعة</p>
        </div>

        <form class="mt-8 space-y-6" onsubmit="handleSubmit(event)" method="GET">
            
            <div>
                <label for="email-address" class="block text-sm font-medium text-gray-700">البريد الإلكتروني</label>
                <input id="email" name="email" type="email" autocomplete="email" required 
                       class="mt-1 appearance-none relative block w-full px-3 py-3 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" 
                       placeholder="أدخل بريدك الإلكتروني">
            </div>
            
            <div>
                <label for="password" class="block text-sm font-medium text-gray-700">كلمة المرور</label>
                <input id="password" name="password" type="password" autocomplete="current-password" required 
                       class="mt-1 appearance-none relative block w-full px-3 py-3 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" 
                       placeholder="كلمة المرور">
            </div>

            <div class="flex items-center justify-between">
                <div class="flex items-center">
                    <input id="remember-me" name="remember-me" type="checkbox" 
                           class="h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded">
                    <label for="remember-me" class="mr-2 block text-sm text-gray-900">
                        تذكرني
                    </label>
                </div>

                <div class="text-sm">
                    <a href="#" class="font-medium text-indigo-600 hover:text-indigo-500">
                        نسيت كلمة المرور؟
                    </a>
                </div>
            </div>

            <div>
                <button id="saveBtn" type="submit" class="group relative w-full flex justify-center py-3 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition duration-150">
                    <i data-feather="log-in" class="ml-3 w-5 h-5"></i>
                    تسجيل الدخول
                </button>
            </div>
        </form>
        
        <div class="mt-6 text-center">
            <p class="text-sm text-gray-600">
                لا تمتلك حساب؟ 
                <a href="/student/register" class="font-medium text-indigo-600 hover:text-indigo-500">
                    إنشاء حساب جديد
                </a>
            </p>
        </div>
        
    </div>
    <div id="toastContainer" class="fixed bottom-4 right-4 z-[70] space-y-3">
    </div>

    <script>
        feather.replace();

        const saveBtn = document.getElementById("saveBtn");
        const originalButtonText = saveBtn.textContent.trim(); 

        // ----------------- دوال التحكم في حالة الزر -----------------

        /**
         * تفعيل وضع التحميل (Loading) على الزر.
         * @param {boolean} isLogin - لتحديد النص (تسجيل الدخول vs إنشاء).
         */
        function startLoading(isLogin = false) {
            saveBtn.disabled = true;
            saveBtn.textContent = isLogin ? 'جاري الدخول...' : 'جاري الإنشاء...';
        }

        /**
         * إيقاف وضع التحميل وإعادة الزر للحالة الأصلية.
         * @param {boolean} isLogin - لتحديد النص.
         */
        function stopLoading(isLogin = false) {
            saveBtn.disabled = false;
            saveBtn.textContent = originalButtonText; 
        }

        // ----------------- دوال عرض الإشعارات (Toast) -----------------

        /**
         * عرض إشعار منبثق (Toast Notification)
         * @param {string} message - نص الرسالة.
         * @param {string} type - نوع الإشعار: 'success', 'error', 'info'.
         */
        function showToast(message, type = 'info') {
            const container = document.getElementById('toastContainer');
            const toast = document.createElement('div');
            
            let bgColor = 'bg-blue-600';
            let icon = 'info';

            switch (type) {
                case 'success':
                    bgColor = 'bg-green-600';
                    icon = 'check-circle';
                    break;
                case 'error':
                    bgColor = 'bg-red-600';
                    icon = 'alert-triangle';
                    break;
                case 'info':
                default:
                    bgColor = 'bg-blue-600';
                    icon = 'info';
                    break;
            }

            toast.className = `p-4 max-w-xs text-white ${bgColor} rounded-lg shadow-xl flex items-center transform transition-transform duration-300 translate-x-full`;
            toast.innerHTML = `
                <i data-feather="${icon}" class="w-5 h-5 ml-3"></i>
                <span class="text-sm font-medium">${message}</span>
                <button onclick="this.closest('div').remove()" class="mr-2 text-white/80 hover:text-white transition-colors">
                    <i data-feather="x" class="w-4 h-4"></i>
                </button>
            `;
            container.appendChild(toast);
            feather.replace(); 
            
            
            setTimeout(() => {
                toast.classList.remove('translate-x-full');
            }, 10);

            setTimeout(() => {
                toast.classList.add('translate-x-full');
                toast.addEventListener('transitionend', () => toast.remove(), {once: true});
            }, 5000); 
        }

        // ----------------- دالة الإرسال الرئيسية (Handle Submit) -----------------

        /**
         * معالجة إرسال نموذج تسجيل الدخول واستدعاء Fetch API.
         */
        async function handleSubmit(event) {
            event.preventDefault(); 
            
            const form = event.target;
            const userData = {
                email: document.getElementById('email').value,
                password: document.getElementById('password').value,
                role: 'student'
            };

            startLoading(true); // تفعيل وضع التحميل (باستخدام نص تسجيل الدخول)

            try {
                const response = await fetch('/student/login', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(userData)
                });

                if (!response.ok) {
                    const errorData = await response.json();
                    // طرح كائن الخطأ كاملاً
                    throw errorData; 
                }

                // حالة النجاح:
                const successData = await response.json();
                stopLoading(true);
                
                // عرض رسالة النجاح في Toast
                showToast("تم تسجيل الدخول بنجاح!", 'success'); 
                
                // التحويل إلى لوحة التحكم
                 setTimeout(() => {
                window.location.href = '/'; // تحويل المتصفح إلى صفحة تسجيل الدخول
            }, 800);


            } catch (error) {
                // معالجة الخطأ
                stopLoading(true);

                // 1. محاولة استخلاص رسالة الخطأ الخاصة بالحقول
                const fieldError = 
                    error?.errors?.email || 
                    error?.errors?.password || 
                    error?.errors?.general; 
                
                // 2. استخدام رسالة الخطأ العامة
                const generalError = error?.message || "فشل تسجيل الدخول. تأكد من اتصال الشبكة.";
                
                // 3. الرسالة النهائية
                const finalMessage = fieldError || generalError;

                // عرض الـ Toast
                showToast("خطأ: " + finalMessage, 'error');
            }
        }
        
    </script>
</body>
</html>