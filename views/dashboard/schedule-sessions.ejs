    const teacherId = '<%= booking.teacherId?._id || booking.teacherId %>';
    const bookingId = '<%= booking._id %>';

    if (!date || !time) return;

    try {
        const response = await fetch('/admin/check-teacher-conflict', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ teacherId, date, time, bookingId })
